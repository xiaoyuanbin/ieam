<?xml version="1.0" encoding="utf-8"?>

<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修类型"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <RadioGroup
            android:id="@+id/pop_report_type_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >
            <RadioButton
                android:id="@+id/pop_report_rb_type"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="土建工程"
                android:textSize="15sp"
                android:drawableRight="@android:drawable/btn_radio"
                android:button="@null"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_height="1dp"
                android:layout_width="180dp"
                android:layout_gravity="center_horizontal"
                android:background="#90909090"
          />
            <RadioButton
                android:id="@+id/pop_report_rb_type2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="安装工程"
                android:textSize="15sp"
                android:drawableRight="@android:drawable/btn_radio"
                android:button="@null"

                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_height="1dp"

                android:layout_width="180dp"

                android:layout_gravity="center_horizontal"

                android:background="#90909090"
 />
            <RadioButton
                android:id="@+id/pop_report_rb_type3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="消防工程"
                android:textSize="15sp"
                android:drawableRight="@android:drawable/btn_radio"
                android:button="@null"


                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_height="1dp"

                android:layout_width="180dp"

                android:layout_gravity="center_horizontal"

                android:background="#90909090"
 />
            <RadioButton
                android:id="@+id/pop_report_rb_type4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="电梯工程"
                android:textSize="15sp"
                android:drawableRight="@android:drawable/btn_radio"
                android:button="@null"


                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_height="1dp"

                android:layout_width="180dp"

                android:layout_gravity="center_horizontal"

                android:background="#90909090" />
            <RadioButton
                android:id="@+id/pop_report_rb_type5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="弱电工程"
                android:textSize="15sp"
                android:drawableRight="@android:drawable/btn_radio"
                android:button="@null"

                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_height="1dp"

                android:layout_width="180dp"

                android:layout_gravity="center_horizontal"

                android:background="#90909090" />
            <RadioButton
                android:id="@+id/pop_report_rb_type6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="强电工程"
                android:textSize="15sp"
                android:drawableRight="@android:drawable/btn_radio"
                android:button="@null"

                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_height="1dp"

                android:layout_width="180dp"

                android:layout_gravity="center_horizontal"

                android:background="#90909090" />
            <RadioButton
                android:id="@+id/pop_report_rb_type7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="一般维修"
                android:textSize="15sp"
                android:drawableRight="@android:drawable/btn_radio"
                android:button="@null"

                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
