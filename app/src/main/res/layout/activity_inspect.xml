<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/bg_tab"
        >
        <Button
            android:id="@+id/inspect_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back"

            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="巡查"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <GridView
        android:id="@+id/inspect_gridview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:numColumns="4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"

        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        ></GridView>

    <TextView
        android:layout_height="1dp"

        android:layout_width="match_parent"

        android:layout_marginLeft="15dp"
        android:background="#90909090"

        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />
    <LinearLayout
        android:id="@+id/inspect_ll_obj"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/location"
            android:layout_marginLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡查对象"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/inspect_object"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"

            android:maxLines="1"

            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp" />
        <Button
            android:id="@+id/inspect_object_go"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/go"
            android:layout_marginRight="15dp"

            />

    </LinearLayout>
    <TextView
        android:layout_height="1dp"

        android:layout_width="match_parent"

        android:layout_marginLeft="15dp"
        android:background="#90909090"

        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/inspect_ll_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"

        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/content"
            android:layout_marginLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡查内容"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/inspect_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="15sp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp" />
        <Button
            android:id="@+id/inspect_content_go"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/go"
            android:layout_marginRight="15dp"


            />

    </LinearLayout>
    <TextView
        android:layout_height="1dp"

        android:layout_width="match_parent"

        android:layout_marginLeft="15dp"
        android:background="#90909090"

        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />
    <LinearLayout
        android:id="@+id/inspect_ll_result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/result"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡查结果"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/inspect_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/inspect_result_go"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/go"
            android:layout_marginRight="15dp"


            />

    </LinearLayout>
    <TextView
        android:layout_height="1dp"

        android:layout_width="match_parent"

        android:layout_marginLeft="15dp"
        android:background="#90909090"

        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />
    <LinearLayout
        android:id="@+id/inspect_ll_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/time"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="巡查时间"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/inspect_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textSize="15sp"

            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/inspect_time_go"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/go"
            android:layout_marginRight="15dp"


            />

    </LinearLayout>
    <TextView
        android:layout_height="1dp"

        android:layout_width="match_parent"

        android:layout_marginLeft="15dp"
        android:background="#90909090"

        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />
    <LinearLayout
        android:id="@+id/inspect_ll_remark"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/remark"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="备注"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/inspect_remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp" />
        <Button
            android:id="@+id/inspect_remark_go"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/go"
            android:layout_marginRight="15dp"

            />

    </LinearLayout>
    <TextView
        android:layout_height="1dp"

        android:layout_width="match_parent"

        android:layout_marginLeft="15dp"
        android:background="#90909090"

        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/inspect_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_submit"

        />

</LinearLayout>
