<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:id="@+id/assets_list_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_weight="1"

        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/assets_list_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:text="兴盛世家"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/assets_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:text="椅子" />
        <TextView
            android:id="@+id/assets_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:text="2018/8/9"
            android:maxLines="1"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:gravity="right|center">
        <Button
            android:id="@+id/assets_list_item_delete"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="删除"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_delete"/>


    </LinearLayout>

</LinearLayout>