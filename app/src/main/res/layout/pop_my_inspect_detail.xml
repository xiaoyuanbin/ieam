<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/bg_tab"

        >
        <Button
            android:id="@+id/inspect_detail_btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/inspect_detail_tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="双流区中德英伦联邦C区2栋1单元2楼2"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="18sp"
            android:focusable="true"
            android:layout_marginRight="15dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"

            android:layout_weight="1"
            android:gravity="center|left"
            />


    </LinearLayout>

    <GridView
        android:id="@+id/inspect_detail_gridview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:numColumns="4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"


        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        ></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="巡查内容:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <TextView

            android:id="@+id/inspect_detail_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="基础设施建设dsdsd"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"

            android:maxLines="1"
            android:layout_marginRight="2dp"
            />
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/go"
            android:layout_marginRight="3dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="巡查类型:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <TextView

            android:id="@+id/inspect_detail_tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="房屋"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:layout_marginEnd="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp" />
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/go"
            android:layout_marginRight="3dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="巡查结果:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <TextView

            android:id="@+id/inspect_detail_tv_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="正常"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:layout_marginRight="2dp" />
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/go"
            android:layout_marginRight="3dp"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="巡查时间:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <TextView

            android:id="@+id/inspect_detail_tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="2018/8/8"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"

            android:layout_marginRight="2dp" />
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/go"
            android:layout_marginRight="3dp"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="备注:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <TextView

            android:id="@+id/inspect_detail_tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="无异常"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"

            android:maxLines="1"
            android:layout_marginRight="2dp"
            />
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/go"
            android:layout_marginRight="3dp"
            />
   </LinearLayout>



</LinearLayout>