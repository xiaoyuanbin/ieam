<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/repair_report_list_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/repair_report_list_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:text="泉水人家"
            android:maxLines="1"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/repair_report_list_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:text="维修中" />
        <TextView
            android:id="@+id/repair_report_list_item_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:text="墙面脱落"
            android:maxLines="1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:gravity="right|center">

        <TextView
        android:id="@+id/repair_report_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:gravity="bottom"
        android:layout_marginTop="10dp"

        android:textSize="13sp"
        android:text="2018/8/5"

        />


    </LinearLayout>

</LinearLayout>