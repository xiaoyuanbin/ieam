<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/bg_tab"

        >
        <Button
            android:id="@+id/repair_detail_btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/repair_detail_repair_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="双流区中德英伦联邦C区2栋1单元2楼2"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="18sp"
            android:focusable="true"
            android:layout_marginRight="15dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"

            android:layout_weight="1"
            android:gravity="center|left"
            />


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hm.ieam.widght.MyGridView
                android:id="@+id/repair_detail_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15sp"
                android:minHeight="100dp"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="5dp"
                ></com.hm.ieam.widght.MyGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="报修单位:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_report_firm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="金信源公司"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="2dp"
                    />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="报修类型:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_report_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="一般维修"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp" />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="报修地点:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_report_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="泉水人家"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:layout_marginRight="2dp" />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="报修部位:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_report_position"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="楼道墙面脱落"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="2dp" />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="报修时间:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_report_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="2018-9-5"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:maxLines="1"
                    android:layout_marginRight="2dp"
                    />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="维修类型:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_repair_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="入户"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="2dp"
                    />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="状态:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_repair_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="维修完成"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="2dp"
                    />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="故障原因及处理方法:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_repair_deal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="多用"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:maxLines="1"
                    android:layout_marginRight="2dp"
                    />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="维修用工预算:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_repair_laborbudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="1"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="2dp"
                    />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="维修材料预算:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_repair_stuffbudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="2018/9/4"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="2dp"
                    />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="维修费用预算:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_repair_costbudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="4"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="2dp"
                    />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="备注:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <TextView

                    android:id="@+id/repair_detail_repair_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="无"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="2dp"
                    />
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/go"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>