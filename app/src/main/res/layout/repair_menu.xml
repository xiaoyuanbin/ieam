<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/bg_tab"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:id="@+id/repair_menu_ll_all"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center"
            android:orientation="horizontal" >

            <!--<ImageView-->

                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:src="@drawable/repair_complete" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/repair_menu_ll_complete"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center"
            android:orientation="horizontal" >

            <!--<ImageView-->

                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:src="@drawable/repair_complete" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已维修"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/repair_menu_ll_wait"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <!--<ImageView-->

                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:src="@drawable/repair_wait" />-->

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待维修"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>